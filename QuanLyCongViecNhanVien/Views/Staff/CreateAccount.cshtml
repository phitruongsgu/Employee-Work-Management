@model AccountModel
@{
    ViewData["Title"] = "Tạo tài khoản nhân viên";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container dashboard-content">
    <h1 style="text-align:center"> <i class="fa fa-pencil-alt"></i>&nbsp;Bước 1: Tạo tài khoản nhân viên</h1>
    <form href="/Staff/CreateAccount" method="POST" style="width:600px;margin:0 auto;">
        <div hidden>
            <label>ID tài khoản</label>
            <input name="IDAccount" value="0" type="text" />
        </div>
        <div hidden>
            <label>ID vai trò</label>
            <input name="IDRole" value="0" type="text" />
        </div>
        <div class="form-group">
            <label class="font-weight-bold" asp-for="Email"></label>
            <input asp-for="Email" class="form-control" />
            <span asp-validation-for="Email" class="text-danger"></span>

        </div>
        <div class="form-group" hidden>
            <label class="font-weight-bold" asp-for="User_Name"></label>
            <input asp-for="User_Name" class="form-control" />
            <span asp-validation-for="User_Name" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label class="font-weight-bold" asp-for="Password"></label>
            <input type="password" asp-for="Password" class="form-control" />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>

        <div class="text-right">
            <input class="btn btn-primary mb-2" type="submit" value="Tiếp tục" />
        </div>
        <div class="text-right mb-5">
            <a href="/Staff/Index" class="btn btn-primary">Huỷ</a>
        </div>
    </form>
    
</div>