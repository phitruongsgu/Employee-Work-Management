<div class="bg-gradient-blue">
    <ul class="navbar-nav flex-column">
        <li class="mt-3">
            <img class="img-fluid rounded mx-auto d-block rounded-circle" src="/icon_user.png" width="100" height="100" />
        </li>
        <li class="text-center nav-link nav-icons">
            @{
                String gender = TempData.Peek("gender").ToString();
                String Role = TempData.Peek("role").ToString();
                if (Role == "Admin")
                {
                    if (gender == "Male")
                    {
                        <h1 class="nav-link text-white font-weight-bold font-10" style="color:black;padding-bottom:2px">Xin chào anh: <b> @TempData.Peek("staffName") (Ban lãnh đạo)</b></h1>
                    }
                    else
                    {
        <h1 class="nav-link text-white font-weight-bold font-10" style="color:black;padding-bottom:2px">Xin chào chị: @TempData.Peek("staffName") (Ban lãnh đạo)</h1>
                    }
                }
                else
                {
                    if (gender == "Male")
                    {
                        <h1 class="nav-link text-white font-weight-bold font-20" style="color:black;padding-bottom:2px">Chào anh: @TempData.Peek("staffName") (Nhân viên)</h1>
                    }
                    else
                    {
                        <h1 class="nav-link text-white font-weight-bold font-20" style="color:black;padding-bottom:2px">Chào chị: @TempData.Peek("staffName") (Nhân viên)</h1>
                    }
                }
            }
            <a class="nav-link nav-icons text-white font-weight-bold font-20 text-center bg-gradient-blue"
               asp-controller="Login"
               asp-action="Logout"
               style="border-radius:10px;">Đăng xuất</a>
        </li>
    </ul>
    <hr style="border: 1px solid white;" />
    <nav class="navbar navbar-expand-lg navbar-light">
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav flex-column">
                <li class="nav-item">
                    <a asp-controller="Home" asp-action="Index"
                       style="font-size:18px;font-weight:bold;padding:12px; border-radius:10px" class="nav-link mt-1 text-white">
                    <i class="fa fa-tachometer-alt" style="font-size:18px;color:white"></i>Bảng điều khiển</a>
                </li>

                <li class="nav-item">
                    <a asp-controller="Work" asp-action="Index" style="font-size:18px;font-weight:bold;padding:12px;border-radius:10px" class="nav-link text-white"><i class="fa fa-list-alt" style="font-size:18px;color:white"></i>&ensp;Quản lý công việc</a>
                </li>
                @{
                    String role = TempData.Peek("role").ToString();
                    if (role == "Admin")
                    {
                        <li class="nav-item">
                            <ul class="nav flex-column">
                                <li class="nav-item">
                                    <a asp-controller="Staff" asp-action="Index" style="font-size:18px;font-weight:bold;padding:12px;border-radius:10px" class="nav-link text-white"><i class="fa fa-users" style="font-size:18px;color:white"></i> Quản lý nhân viên</a>
                                </li>
                            </ul>
                        </li>

                    }
                }

            </ul>
        </div>
    </nav>
    <!-- the icon as a time element -->
</div>
<time datetime="2014-09-20" class="icon mt-3">
    @{
        // Tạo một đối tượng DateTime (năm, tháng, ngày, giờ, phút, giây).
        int year = DateTime.Now.Year;
        int month = DateTime.Now.Month;
        int day = DateTime.Now.Day;
        int hour = DateTime.Now.Hour;
        int minute = DateTime.Now.Minute;
        int second = DateTime.Now.Second;
        DateTime aDateTime = new DateTime(year, month, day, hour, minute, second);
        DayOfWeek dayOfWeek = aDateTime.DayOfWeek;
        string[] formattedStrings = aDateTime.GetDateTimeFormats();
    }
    <em>@dayOfWeek</em>
    <strong>@formattedStrings[4].Split(' ')[0]</strong>
    <span>@day</span>
</time>